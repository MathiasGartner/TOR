[Unit]
Description=WiFi Watchdog - Reboot or restart WiFi if local connection lost
After=network.target
Wants=network.target

[Service]
Type=simple
ExecStart=sudo /home/pi/torenv/bin/python3 -u -m tor.client.WifiWatchdog
WorkingDirectory=/home/pi/
Restart=always
RestartSec=10
User=pi
StandardOutput=append:/home/pi/WifiWatchdog.log
StandardError=append:/home/pi/WifiWatchdog.log

[Install]
WantedBy=multi-user.target